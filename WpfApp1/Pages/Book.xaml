<Page x:Class="WpfApp1.Pages.Book"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Book">
    <Grid>
        <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ListView Name="lstBook"
               Grid.RowSpan="8" 
               Grid.ColumnSpan="8" 
         ItemsSource="{Binding book}">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Header="Id " Width="70">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ID}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            
                            <GridViewColumn Header="ФИО автора" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                        <TextBlock Text="{Binding Author.LastName}"/>
                                        <TextBlock Text="{Binding Author.Name}"/>
                                        <TextBlock Text="{Binding Author.Patronymic}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            
                            <GridViewColumn Header="Название книги" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                           
                            <GridViewColumn Header="Год создания">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding YearMade, StringFormat=yyyy}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            
                            <GridViewColumn Header="Издательства" Width="115">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                    <TextBlock Text="{Binding CreateBuild.Name}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            
                        <GridViewColumn Header="Жанр" Width="115">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Janr.Name}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                  
                        
                    <GridViewColumn Header="Количество страниц" Width="115">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                    <TextBlock Text="{Binding CountPage}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                        <GridViewColumn Header="Зал" Width="115">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Hall.Name}"/>
                                        <TextBlock Text="{Binding Hall.CountShelf}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Полка" Width="115">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Shelf}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
    
                    </GridView.Columns>
                </GridView>
                </ListView.View>
            </ListView>
        <TextBox Grid.ColumnSpan="2" Grid.Column="8"
                 Grid.Row="1" Width="200" Height="25" 
                 Padding="2 0 0 0" VerticalAlignment="Top"
          TextChanged="BookSearchTb_TextChanged" 
                 Name="BookSearchTb" />
        <TextBlock Grid.ColumnSpan="3" 
                   Grid.Column="7"  Width="200"
                   Height="25" Padding="2 0 0 0"
                   VerticalAlignment="Bottom" 
            HorizontalAlignment="Left" 
                   Text="Поиск книги по названию" Margin="80,0,0,0"/>
        <ComboBox Name="FilterrB" ItemsSource="{Binding book}"
                  SelectionChanged="FilterrB_SelectionChanged"
           Grid.Row="3" Grid.Column="8" Grid.ColumnSpan="2"
           Width="150" Height="40">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Lastname}"/>
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="{Binding Patronymic}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="AddReaderTicketBtn"
  Grid.ColumnSpan="2"
  Grid.Row="7"
         Grid.Column="8"
  Height="35"
  Width="100"
  Content="Сохранить" />
    </Grid>
</Page>
